<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/AppTheme"
    tools:context=".FotoElegir">

    <ImageView
        android:id="@+id/Opcion2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_goneMarginBottom="1dp"
        app:layout_goneMarginLeft="1dp"
        app:layout_constraintTop_toTopOf="@id/guiahorizontal"
        app:layout_constraintBottom_toBottomOf="@id/guiahorizonta2"
        app:layout_constraintStart_toEndOf="@id/guiavertica2"
        app:layout_constraintEnd_toStartOf="@id/guiavertical3"
        app:layout_constraintVertical_bias="0.375"
        android:background="@drawable/p2_iglesia2" />

    <ImageView
        android:id="@+id/Opcion1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/guiahorizontal"
        app:layout_constraintBottom_toBottomOf="@id/guiahorizonta2"
        app:layout_constraintStart_toEndOf="@id/guiavertical1"
        app:layout_constraintEnd_toStartOf="@id/guiavertica2"
        app:layout_constraintHorizontal_bias="0.272"
        app:layout_constraintVertical_bias="0.429"
        android:background="@drawable/p2_iglesia3" />

    <ImageView
        android:id="@+id/Opcion3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/guiahorizonta3"
        app:layout_constraintEnd_toStartOf="@id/guiavertica2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@id/guiavertical1"
        app:layout_constraintTop_toBottomOf="@id/guiahorizonta2"
        app:layout_constraintVertical_bias="0.0"
        android:background="@drawable/p2_iglesia1" />

    <ImageView
        android:id="@+id/Opcion4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toStartOf="@id/guiavertical3"
        app:layout_constraintStart_toStartOf="@id/guiavertica2"
        app:layout_constraintTop_toBottomOf="@+id/guiahorizonta2"
        app:layout_constraintBottom_toTopOf="@id/guiahorizonta3"
        app:layout_constraintVertical_bias="0.907"
        android:background="@drawable/p2_iglesia4" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="444dp"
        android:layout_height="61dp"
        android:text="@string/p2_argazkia_galdera"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/imageView12"
        android:layout_width="125dp"
        android:layout_height="169dp"
        android:src="@drawable/bailoteo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.561" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guiavertical1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.20" />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/guiavertica2"
        app:layout_constraintGuide_percent="0.50"
        android:orientation="vertical"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/guiavertical3"
        app:layout_constraintGuide_percent="0.81"
        android:orientation="vertical"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guiahorizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.26" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guiahorizonta2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.6" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guiahorizonta3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.95"
         />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/imageView13"
        android:layout_width="125dp"
        android:layout_height="169dp"
        android:src="@drawable/bailoteo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.561" />

</androidx.constraintlayout.widget.ConstraintLayout>