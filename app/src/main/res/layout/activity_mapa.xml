<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cons"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/AppTheme"
    tools:context=".MapaActivity">

    <com.mapbox.mapboxsdk.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Fondo"
        mapbox:mapbox_cameraTargetLat="43.209368"
        mapbox:mapbox_cameraTargetLng="-2.889088"
        mapbox:mapbox_cameraZoom="14.5"
        mapbox:mapbox_cameraZoomMin="12"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="0dp">


    </com.mapbox.mapboxsdk.maps.MapView>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnJuegos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.073"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.949"
        mapbox:srcCompat="@drawable/mando" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/FAprinicipal"
        android:layout_width="56dp"
        android:layout_height="72dp"
        android:background="#4CAF50"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.954"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.949"
        app:srcCompat="@android:drawable/ic_menu_mylocation" />

    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/mikahasllegado"
        android:layout_width="134dp"
        android:visibility="invisible"
        android:layout_height="141dp"
        android:paddingLeft="2dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.942"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3"
        mapbox:srcCompat="@drawable/uva" />

    <TextView
        android:id="@+id/textohasllegado"
        android:layout_width="364dp"
        android:layout_height="180dp"
        android:background="@drawable/pregunta"
        android:text="Puntura heldu zara jokua aktibatzeko puntuan klik egin"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:padding="2dp"
        android:paddingTop="2dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.697"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.064" />


</androidx.constraintlayout.widget.ConstraintLayout>